extends ../layout

block content
  #logo
    #logo-retina 
      img(src="/assets/images/logo.png")
  #container
    #header
      #header-amount(style="max-width: 100%; text-align:center; float: none") Monthly Subscription for <br>€3,00/month

    form#body(action="/subscription/create" method="post")
      #form-fields
        .field
          input.input(type="text" name="firstName" placeholder="First Name" required)
        .field
          input.input(type="text" name="lastName" placeholder="Last Name" required)
        .field
          input.input(type="text" name="email" placeholder="Email address" required)
        p.has-text-centered
          small We'll charge you €0.01 to confirm the subscription. The actual first payment will be made within a couple of days. You can cancel your subscription at any given time.
        if userId
          input(type="hidden" name="userId" value=userId)
      #submit-grid
        button#submit 🏆 Sign Me Up! 🏆
  